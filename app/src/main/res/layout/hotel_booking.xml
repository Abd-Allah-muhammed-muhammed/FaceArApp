<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.HotelBooking"
    android:orientation="vertical"
    android:background="@color/colorPrimary"

    >
    <RelativeLayout
        android:id="@+id/relative_hotel_booking"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        >
        <RelativeLayout
            android:id="@+id/toolbar_back1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp">

            <ImageView
                android:id="@+id/toolbar_back2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_back_arrow"
                />
            <TextView
                android:id="@+id/back_pressed_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BACK"
                android:textColor="@color/white"
                android:layout_marginStart="@dimen/_25sdp"/>

        </RelativeLayout>

        <ImageView
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_centerInParent="true"
            android:background="@drawable/logo" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="15dp"
            android:background="@drawable/ic_button" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/iv_hotel1"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:src="@drawable/hotel1"
        android:layout_below="@+id/relative_hotel_booking"
        android:layout_centerInParent="true"

        />

    <TextView
        android:id="@+id/tv_thanks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/thank_you_for_using"
        android:textColor="#fff"
        android:textSize="20dp"
        android:layout_below="@+id/iv_hotel1"
        android:layout_centerInParent="true"

        />
    <TextView
        android:id="@+id/tv_tamm_app"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tamm_app"
        android:textStyle="bold"
        android:textColor="@color/app_color"
        android:textSize="20dp"
        android:layout_below="@+id/tv_thanks"
        android:layout_centerInParent="true"
        />
    <TextView
        android:id="@+id/tv_booking"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hotel_booking"
        android:textStyle="bold"
        android:textColor="@color/app_color"
        android:textSize="20dp"
        android:layout_below="@+id/tv_tamm_app"
        android:layout_centerInParent="true"


        />
    <TextView
        android:id="@+id/tv_dear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dear_mr"
        android:textColor="#fff"
        android:textSize="13dp"
        android:layout_centerInParent="true"
        android:layout_below="@+id/tv_booking"
        />
    <TextView
        android:id="@+id/tv_your_hotel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/your_hotel_code_is"
        android:textSize="13dp"
        android:textColor="#fff"
        android:layout_below="@id/tv_dear"
        android:layout_centerInParent="true"

        />
    <TextView
        android:id="@+id/tv_code"
        android:layout_width="170dp"
        android:layout_height="35dp"
        android:text="@string/code"
        android:textColor="@color/app_color"
        android:background="@drawable/shape2"
        android:layout_below="@+id/tv_your_hotel"
        android:layout_centerInParent="true"
        android:gravity="center"

        />
    <TextView
        android:id="@+id/tv_for"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/for_further_information"
        android:textColor="#fff"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:layout_below="@+id/tv_code"


        />


    <TextView
        android:id="@+id/tv_please_check"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/please_check_your_e_mail"
        android:textColor="#fff"
        android:gravity="center"
        android:layout_below="@+id/tv_for"


        />
    <Button
        android:id="@+id/back_to_main"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:text="@string/back_to_home_page"
        android:background="@drawable/shape"

        android:textStyle="bold"
        android:layout_below="@+id/tv_please_check"
        android:layout_centerInParent="true"


        />

</RelativeLayout>