<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.MyBookActivity"
    android:background="@drawable/bg"

    >

    <RelativeLayout
        android:id="@+id/toolbar_back_booked"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        >

        <RelativeLayout
            android:id="@+id/toolbar_back1_booked"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"


            >


            <ImageView
                android:id="@+id/toolbar_back_image_back_booked"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:background="@drawable/ic_back_arrow"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="7dp"
                android:layout_toEndOf="@+id/toolbar_back_image_back_booked"
                android:text="@string/back"
                android:textColor="#ffff"
                android:textSize="12sp" />

        </RelativeLayout>



        <ImageView
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_centerInParent="true"
            android:background="@drawable/logo" />


    </RelativeLayout>


    <View
        android:id="@+id/line1_booked"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/toolbar_back_booked"
        android:background="@drawable/line1" />




    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view_booked"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/line1_booked"
        android:layout_marginTop="@dimen/_30sdp"

        >

    </androidx.recyclerview.widget.RecyclerView>














</RelativeLayout>