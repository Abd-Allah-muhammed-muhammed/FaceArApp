<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/manlap"
    android:orientation="vertical"
    tools:context=".activities.Passenger_inform">

    <RelativeLayout
        android:id="@+id/tollbar_relatev"
        android:layout_width="match_parent"
        android:layout_height="47dp"

        >

        <RelativeLayout
            android:id="@+id/relative_back_passenger_inform"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_9sdp">


            <ImageView
                android:id="@+id/toolbar_back1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="4dp"
                android:background="@drawable/ic_back_arrow" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="8dp"
                android:layout_toEndOf="@+id/toolbar_back1"
                android:text="BACK"
                android:textColor="#ffff"
                android:textSize="12sp" />


        </RelativeLayout>

        <ImageView

            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_alignParentStart="false"
            android:layout_alignParentEnd="false"
            android:layout_centerInParent="true"
            android:layout_marginStart="159dp"
            android:layout_marginEnd="179dp"
            android:src="@drawable/logo" />

        <ImageView
            android:id="@+id/iv_booked_passenger_inform"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:background="@drawable/ic_button" />


    </RelativeLayout>

    <View
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/tollbar_relatev"
        android:background="@drawable/line1" />


    <TextView
        android:id="@+id/PassengerText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line1"
        android:layout_margin="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_15sdp"
        android:text="Passenger(s) Information"
        android:textColor="@color/white"
        android:textSize="@dimen/_15ssp" />



    <androidx.recyclerview.widget.RecyclerView
        android:layout_below="@+id/PassengerText"
        android:id="@+id/rc_passenger_info"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_350sdp">

    </androidx.recyclerview.widget.RecyclerView>

    <Button
        android:layout_marginTop="@dimen/_10sdp"
        android:id="@+id/passenger_btn_info"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rc_passenger_info"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/_15sdp"
        android:background="@drawable/shape"
        android:text="CONFIRM"
        android:textStyle="bold" />


</RelativeLayout>