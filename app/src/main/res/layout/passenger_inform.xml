<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/manlap"
    android:orientation="vertical"
    tools:context=".activities.Passenger_inform">

    <RelativeLayout
        android:id="@+id/tollbar_relatev"
        android:layout_width="match_parent"
        android:layout_height="47dp"

        >
        <RelativeLayout
            android:id="@+id/relative_back_passenger_inform"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_9sdp"
            android:layout_marginStart="@dimen/_5sdp"
            >


            <ImageView
                android:id="@+id/toolbar_back1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="4dp"
                android:background="@drawable/ic_back_arrow" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="8dp"
                android:layout_toEndOf="@+id/toolbar_back1"
                android:text="BACK"
                android:textColor="#ffff"
                android:textSize="12sp" />


        </RelativeLayout>

        <ImageView

            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_alignParentStart="false"
            android:layout_alignParentEnd="false"
            android:layout_centerInParent="true"
            android:layout_marginStart="159dp"
            android:layout_marginEnd="179dp"
            android:src="@drawable/logo" />

        <ImageView
            android:id="@+id/iv_booked_passenger_inform"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/ic_button" />


    </RelativeLayout>

    <View
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/tollbar_relatev"
        android:background="@drawable/line1" />


    <TextView
        android:id="@+id/PassengerText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line1"
        android:layout_margin="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_15sdp"
        android:text="Passenger(s) Information"
        android:textColor="@color/white"
        android:textSize="@dimen/_15ssp" />


    <TextView
        android:id="@+id/adultText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/PassengerText"
        android:layout_marginStart="@dimen/_15sdp"
        android:drawableStart="@drawable/ic_person"
        android:drawablePadding="@dimen/_4sdp"
        android:fontFamily="sans-serif-light"
        android:text="Adult"
        android:textColor="@color/white"
        android:textSize="@dimen/_15ssp" />


    <View
        android:id="@+id/line_adult"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/adultText"
        android:layout_marginStart="@dimen/_15sdp"
        android:background="@drawable/line1" />


    <RelativeLayout
        android:id="@+id/relative_first_last"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line_adult"
        android:layout_marginLeft="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_4sdp">



        <RelativeLayout
            android:background="@drawable/shape_plack2"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="@dimen/_4sdp"
            android:id="@+id/mromiss_layout"
            android:layout_width="@dimen/_70sdp"
            android:layout_height="@dimen/_20sdp">

            <Spinner
                android:id="@+id/mromiss"
android:backgroundTint="@color/app_color"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:gravity="center"
                android:textColor="@color/white"

                android:textColorHint="#FFFFFF"

                android:textSize="@dimen/_10ssp" />
        </RelativeLayout>




        <View
            android:layout_width="@dimen/_70sdp"
            android:layout_height="1dp"
            android:layout_below="@+id/mromiss_layout"
            android:layout_marginTop="3dp"
            android:background="@drawable/line1" />

        <EditText
            android:id="@+id/ed_first_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/mromiss_layout"
            android:backgroundTint="@android:color/transparent"
            android:fontFamily="sans-serif-light"
            android:hint="@string/first_name"
            android:inputType="textCapSentences"
            android:nextFocusDown="@+id/ed_last_name"
            android:textColor="#fff"
            android:textColorHint="#FFFFFF"
            android:textSize="@dimen/_10ssp"

            />

        <View
            android:id="@+id/line_first_name"
            android:layout_width="@dimen/_120sdp"
            android:layout_height="1dp"
            android:layout_below="@+id/ed_first_name"
            android:layout_toRightOf="@+id/mromiss_layout"
            android:background="@drawable/line1" />

        <EditText
            android:id="@+id/ed_last_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dp"
            android:layout_toRightOf="@+id/ed_first_name"
            android:backgroundTint="@android:color/transparent"
            android:fontFamily="sans-serif-light"
            android:hint="@string/last_name"
            android:inputType="textCapSentences"
            android:nextFocusDown="@+id/ed_Date"
            android:textColor="#fff"
            android:textColorHint="#FFFFFF"
            android:textSize="@dimen/_10ssp" />

        <View
            android:layout_width="@dimen/_120sdp"
            android:layout_height="1dp"
            android:layout_below="@+id/ed_last_name"
            android:layout_marginStart="@dimen/_8sdp"
            android:layout_toRightOf="@+id/line_first_name"
            android:background="@drawable/line1" />

    </RelativeLayout>


    <RelativeLayout

        android:id="@+id/relative_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relative_first_last"
        android:layout_marginStart="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_8sdp">

        <TextView
            android:id="@+id/tv_dob"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:text="DOB"
            android:textColor="#fff"
            android:textSize="@dimen/_10ssp"


            />

        <View
            android:layout_width="@dimen/_30sdp"
            android:layout_height="1dp"
            android:layout_below="@+id/tv_dob"
            android:layout_marginTop="@dimen/_4sdp"
            android:background="@drawable/line1"

            />


        <TextView
            android:id="@+id/date_of_birth_adult"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_30sdp"
            android:layout_toRightOf="@+id/tv_dob"
            android:drawableLeft="@drawable/ic_arrow_drop_down_black_24dp"
            android:fontFamily="sans-serif-light"
            android:orientation="vertical"
            android:text="DD-MM-YYYY"
            android:textColor="@color/app_color"
            android:textSize="@dimen/_10ssp"


            />

        <View
            android:layout_width="@dimen/_90sdp"
            android:layout_height="1dp"
            android:layout_below="@+id/date_of_birth_adult"
            android:layout_marginStart="@dimen/_30sdp"
            android:layout_toRightOf="@+id/tv_dob"
            android:background="@drawable/line1"


            />


        <AutoCompleteTextView
            android:id="@+id/nationality_adult"
            android:layout_width="@dimen/_120sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/_4sdp"
            android:background="@drawable/shape_plack2"
            android:drawableStart="@drawable/ic_search_black_24dp"
            android:drawablePadding="@dimen/_10ssp"
            android:drawableTint="@color/app_color"
            android:fontFamily="sans-serif-light"
            android:hint="NATIONALITY"
            android:inputType="textPersonName"
            android:textColor="@color/white"
            android:textColorHint="#FFFFFF"
            android:textSize="@dimen/_10ssp" />


    </RelativeLayout>


    <TextView

        android:id="@+id/childtText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relative_date"
        android:layout_marginStart="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_10ssp"
        android:drawableStart="@drawable/ic_person"
        android:drawablePadding="@dimen/_4sdp"
        android:fontFamily="sans-serif-light"
        android:text="Child"
        android:textColor="@color/white"
        android:textSize="@dimen/_15ssp" />


    <View
        android:id="@+id/line_child"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/childtText"
        android:layout_marginStart="@dimen/_15sdp"
        android:background="@drawable/line1" />


    <RelativeLayout
        android:id="@+id/relative_first_last_child"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line_child"
        android:layout_marginLeft="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_4sdp">

        <RelativeLayout

            android:layout_marginTop="10dp"
            android:layout_marginEnd="@dimen/_4sdp"
            android:background="@drawable/shape_plack2"

            android:id="@+id/mromiss_child_layout"
            android:layout_width="@dimen/_70sdp"
            android:layout_height="@dimen/_20sdp">

            <Spinner
                android:id="@+id/mromiss_child"

                android:backgroundTint="@color/app_color"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:gravity="center"
                android:textColor="@color/white"

                android:textColorHint="#FFFFFF"

                android:textSize="@dimen/_10ssp" />

        </RelativeLayout>



        <View
            android:layout_width="@dimen/_70sdp"
            android:layout_height="1dp"
            android:layout_below="@+id/mromiss_child_layout"
            android:layout_marginTop="3dp"
            android:background="@drawable/line1" />

        <EditText
            android:id="@+id/ed_first_name_child"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/mromiss_child_layout"
            android:backgroundTint="@android:color/transparent"
            android:fontFamily="sans-serif-light"
            android:hint="@string/first_name"
            android:inputType="textCapSentences"
            android:nextFocusDown="@+id/ed_last_name"
            android:textColor="#fff"
            android:textColorHint="#FFFFFF"
            android:textSize="@dimen/_10ssp"

            />

        <View
            android:id="@+id/line_first_name_child"
            android:layout_width="@dimen/_120sdp"
            android:layout_height="1dp"
            android:layout_below="@+id/ed_first_name_child"
            android:layout_toRightOf="@+id/mromiss_child_layout"
            android:background="@drawable/line1" />

        <EditText
            android:id="@+id/ed_last_name_child"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dp"
            android:layout_toRightOf="@+id/ed_first_name_child"
            android:backgroundTint="@android:color/transparent"
            android:fontFamily="sans-serif-light"
            android:hint="@string/last_name"
            android:inputType="textCapSentences"
            android:nextFocusDown="@+id/ed_Date"
            android:textColor="#fff"
            android:textColorHint="#FFFFFF"
            android:textSize="@dimen/_10ssp" />

        <View
            android:layout_width="@dimen/_120sdp"
            android:layout_height="1dp"
            android:layout_below="@+id/ed_last_name_child"
            android:layout_marginStart="@dimen/_8sdp"
            android:layout_toRightOf="@+id/line_first_name_child"
            android:background="@drawable/line1" />

    </RelativeLayout>


    <RelativeLayout

        android:id="@+id/relative_date_child"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relative_first_last_child"
        android:layout_marginStart="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_12sdp">

        <TextView
            android:id="@+id/tv_dob_child"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:text="DOB"
            android:textColor="#fff"
            android:textSize="@dimen/_10ssp"


            />

        <View
            android:layout_width="@dimen/_30sdp"
            android:layout_height="1dp"
            android:layout_below="@+id/tv_dob_child"
            android:layout_marginTop="@dimen/_4sdp"
            android:background="@drawable/line1"

            />


        <TextView
            android:id="@+id/date_of_birth_child"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_30sdp"
            android:layout_toRightOf="@+id/tv_dob_child"
            android:drawableLeft="@drawable/ic_arrow_drop_down_black_24dp"
            android:fontFamily="sans-serif-light"
            android:orientation="vertical"
            android:text="DD-MM-YYYY"
            android:textColor="@color/app_color"
            android:textSize="@dimen/_10ssp"


            />

        <View
            android:layout_width="@dimen/_90sdp"
            android:layout_height="1dp"
            android:layout_below="@+id/date_of_birth_child"
            android:layout_marginStart="@dimen/_30sdp"
            android:layout_toRightOf="@+id/tv_dob_child"
            android:background="@drawable/line1"


            />


        <AutoCompleteTextView
            android:id="@+id/nationality_child"
            android:layout_width="@dimen/_120sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/_4sdp"
            android:background="@drawable/shape_plack2"
            android:drawableStart="@drawable/ic_search_black_24dp"
            android:drawablePadding="@dimen/_10ssp"
            android:drawableTint="@color/app_color"
            android:fontFamily="sans-serif-light"
            android:hint="NATIONALITY"
            android:inputType="textPersonName"
            android:textColor="@color/white"
            android:textColorHint="#FFFFFF"
            android:textSize="@dimen/_10ssp" />


    </RelativeLayout>


    <TextView

        android:id="@+id/infanttText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relative_date_child"
        android:layout_marginStart="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_10ssp"
        android:drawableStart="@drawable/ic_person"
        android:drawablePadding="@dimen/_4sdp"
        android:fontFamily="sans-serif-light"
        android:text="infant"
        android:textColor="@color/white"
        android:textSize="@dimen/_15ssp" />


    <View
        android:id="@+id/line_infant"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/infanttText"
        android:layout_marginStart="@dimen/_15sdp"
        android:background="@drawable/line1" />


    <RelativeLayout
        android:id="@+id/relative_first_last_infant"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line_infant"
        android:layout_marginLeft="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_4sdp">

        <RelativeLayout
            android:id="@+id/mromiss_infant_layout"
            android:layout_width="@dimen/_70sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="@dimen/_4sdp"
            android:background="@drawable/shape_plack2">

            <Spinner
                android:id="@+id/mromiss_infant"

                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:backgroundTint="@color/app_color"
                android:gravity="center"
                android:textColor="@color/white"

                android:textColorHint="#FFFFFF"

                android:textSize="@dimen/_10ssp" />
        </RelativeLayout>


        <View
            android:layout_width="@dimen/_70sdp"
            android:layout_height="1dp"
            android:layout_below="@+id/mromiss_infant_layout"
            android:layout_marginTop="3dp"
            android:background="@drawable/line1" />

        <EditText
            android:id="@+id/ed_first_name_infant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/mromiss_infant_layout"
            android:backgroundTint="@android:color/transparent"
            android:fontFamily="sans-serif-light"
            android:hint="@string/first_name"
            android:inputType="textCapSentences"
            android:nextFocusDown="@+id/ed_last_name"
            android:textColor="#fff"
            android:textColorHint="#FFFFFF"
            android:textSize="@dimen/_10ssp"

            />

        <View
            android:id="@+id/line_first_name_infant"
            android:layout_width="@dimen/_120sdp"
            android:layout_height="1dp"
            android:layout_below="@+id/ed_first_name_infant"
            android:layout_toRightOf="@+id/mromiss_infant_layout"
            android:background="@drawable/line1" />

        <EditText
            android:id="@+id/ed_last_name_infant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dp"
            android:layout_toRightOf="@+id/ed_first_name_infant"
            android:backgroundTint="@android:color/transparent"
            android:fontFamily="sans-serif-light"
            android:hint="@string/last_name"
            android:inputType="textCapSentences"
            android:nextFocusDown="@+id/ed_Date"
            android:textColor="#fff"
            android:textColorHint="#FFFFFF"
            android:textSize="@dimen/_10ssp" />

        <View
            android:layout_width="@dimen/_120sdp"
            android:layout_height="1dp"
            android:layout_below="@+id/ed_last_name_infant"
            android:layout_marginStart="@dimen/_8sdp"
            android:layout_toRightOf="@+id/line_first_name_infant"
            android:background="@drawable/line1" />

    </RelativeLayout>


    <RelativeLayout

        android:id="@+id/relative_date_infant"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relative_first_last_infant"
        android:layout_marginStart="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_12sdp">

        <TextView
            android:id="@+id/tv_dob_infant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:text="DOB"
            android:textColor="#fff"
            android:textSize="@dimen/_10ssp"


            />

        <View
            android:layout_width="@dimen/_30sdp"
            android:layout_height="1dp"
            android:layout_below="@+id/tv_dob_infant"
            android:layout_marginTop="@dimen/_4sdp"
            android:background="@drawable/line1"

            />


        <TextView
            android:id="@+id/date_of_birth_adult_infant"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_30sdp"
            android:layout_toRightOf="@+id/tv_dob_infant"
            android:drawableLeft="@drawable/ic_arrow_drop_down_black_24dp"
            android:fontFamily="sans-serif-light"
            android:orientation="vertical"
            android:text="DD-MM-YYYY"
            android:textColor="@color/app_color"
            android:textSize="@dimen/_10ssp"


            />

        <View
            android:layout_width="@dimen/_90sdp"
            android:layout_height="1dp"
            android:layout_below="@+id/date_of_birth_adult_infant"
            android:layout_marginStart="@dimen/_30sdp"
            android:layout_toRightOf="@+id/tv_dob_infant"
            android:background="@drawable/line1"


            />


        <AutoCompleteTextView
            android:id="@+id/nationality_adult_infant"
            android:layout_width="@dimen/_120sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/_4sdp"
            android:background="@drawable/shape_plack2"
            android:drawableStart="@drawable/ic_search_black_24dp"
            android:drawablePadding="@dimen/_10ssp"
            android:drawableTint="@color/app_color"
            android:fontFamily="sans-serif-light"
            android:hint="NATIONALITY"
            android:inputType="textPersonName"
            android:textColor="@color/white"
            android:textColorHint="#FFFFFF"
            android:textSize="@dimen/_10ssp" />


    </RelativeLayout>


    <Button
        android:id="@+id/passenger_btn_info"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relative_date_infant"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_60sdp"
        android:background="@drawable/shape"
        android:text="CONFIRM"
        android:textStyle="bold" />


</RelativeLayout>