<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".fragments.AuthenticationFragment"

    >
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/welcome_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize">

        <ImageView
            android:id="@+id/back_pressed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_back_arrow"
            android:layout_marginTop="15dp"/>
    </androidx.appcompat.widget.Toolbar>
<RelativeLayout
    android:id="@+id/relative_img"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/welcome_toolbar"
    >





    <RelativeLayout
        android:id="@+id/relative_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">




        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/authintication_text"
            android:textColor="#FFF"
            android:textDirection="rtl"
            android:textSize="@dimen/_12ssp"
            android:layout_below="@+id/double_quatation"
            android:layout_marginLeft="@dimen/_10sdp"/>

        <ImageView
            android:id="@+id/double_quatation"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:src="@drawable/ic_quotation_mark"
            android:layout_marginLeft="@dimen/_10sdp"/>


    </RelativeLayout>
    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_205sdp"
        android:src="@drawable/authintication_image"
        android:layout_marginTop="@dimen/_60sdp"
        />
</RelativeLayout>

    <Button
        android:id="@+id/btn_signin"
        android:layout_width="@dimen/_120sdp"
        android:layout_height="wrap_content"
        android:text="sign in"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_10sdp"
        android:background="@drawable/border"
        android:textColor="#FFF"
        android:layout_below="@+id/relative_img"
        android:layout_centerHorizontal="true"/>
    <Button
        android:id="@+id/btn_signup"
        android:layout_width="@dimen/_120sdp"
        android:layout_height="wrap_content"
        android:text="@string/register"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_10sdp"
        android:background="@drawable/border"
        android:textColor="#FFF"
        android:layout_below="@+id/btn_signin"
        android:layout_centerHorizontal="true"/>
    <Button
        android:id="@+id/btn_signin_as_aguest"
        android:layout_width="@dimen/_120sdp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_30sdp"
        android:background="@drawable/border"
        android:text="sign in as a guest"
        android:textColor="#FFF"
        android:layout_below="@+id/btn_signup"
        android:layout_centerHorizontal="true"/>
</RelativeLayout>