<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.Proceedbeybey"
    android:background="@drawable/bg"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/relative_booking"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <ImageView
            android:id="@+id/back_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@drawable/ic_back_arrow"
            android:backgroundTint="#FFEB3B"/>
        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BACK"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@+id/back_img"
        android:textColor="#ffff"
        android:layout_marginLeft="5dp"
        android:layout_gravity="center"/>

        <ImageView
            android:layout_width="34dp"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:background="@drawable/logo"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="15dp"
            android:layout_marginRight="@dimen/_10sdp"
            android:background="@drawable/ic_button"/>
    </RelativeLayout>
    <ImageView
        android:id="@+id/img_linee"
        android:layout_width="match_parent"
        android:layout_height="12dp"
        android:src="@drawable/line1"
        android:layout_below="@+id/relative_booking"
        android:layout_centerInParent="true" />

    <RelativeLayout
        android:layout_marginTop="@dimen/_10sdp"
        android:id="@+id/rel_checked"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_linee"
        android:layout_centerInParent="true"
        android:background="@drawable/shapepassenger">

        <CheckedTextView
            android:id="@+id/passen_air"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Passenger Airplane"
            android:textColor="@color/white"
            android:textIsSelectable="true"
            android:layout_marginLeft="@dimen/_10sdp"
            />
        <View
            android:id="@+id/view_blo"
            android:layout_width="1dp"
            android:layout_height="@dimen/_10sdp"
            android:layout_toRightOf="@+id/passen_air"
            android:background="@color/app_color"
            android:layout_marginTop="@dimen/_2sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"/>
        <CheckedTextView
            android:id="@+id/private_jet"
            android:layout_toRightOf="@+id/view_blo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Private Jet"
            android:textColor="@color/app_color"
            android:textIsSelectable="true"
            android:layout_marginRight="@dimen/_10sdp"/>

    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="@dimen/_10sdp"
        android:id="@+id/rel2_checked"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rel_checked"
        android:layout_centerInParent="true"
        android:background="@drawable/shapepassenger">

        <CheckedTextView
            android:id="@+id/one_way"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="One Way"
            android:textColor="@color/white"
            android:textIsSelectable="true"
            android:layout_marginLeft="@dimen/_10sdp"
            />
        <View
            android:id="@+id/view_blo2"
            android:layout_width="1dp"
            android:layout_height="@dimen/_10sdp"
            android:layout_toRightOf="@+id/one_way"
            android:background="@color/app_color"
            android:layout_marginTop="@dimen/_2sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"/>
        <CheckedTextView
            android:id="@+id/return_passe"
            android:layout_toRightOf="@+id/view_blo2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Return"
            android:textColor="@color/app_color"
            android:textIsSelectable="true"
           />
        <View
            android:id="@+id/view_blo3"
            android:layout_width="1dp"
            android:layout_height="@dimen/_10sdp"
            android:layout_toRightOf="@+id/return_passe"
            android:background="@color/app_color"
            android:layout_marginTop="@dimen/_2sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"/>
        <CheckedTextView
            android:id="@+id/multi_cities"
            android:layout_toRightOf="@+id/view_blo3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MultiCities"
            android:textColor="@color/app_color"
            android:textIsSelectable="true"
            android:layout_marginRight="@dimen/_10sdp"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/from_country"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="From"
        android:layout_marginTop="@dimen/_20sdp"
        android:textAllCaps="false"
        android:layout_below="@+id/rel2_checked"
        android:textColor="@color/white"
        android:layout_marginLeft="@dimen/_50sdp"/>
    <TextView
        android:id="@+id/to_country"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="To"
        android:layout_marginTop="@dimen/_20sdp"
        android:textAllCaps="false"
        android:layout_below="@+id/rel2_checked"
        android:textColor="@color/white"
        android:layout_marginRight="@dimen/_50sdp"
        android:layout_alignParentRight="true"/>

    <RelativeLayout
        android:id="@+id/relative_from_to"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/from_country">

        <Spinner
            android:backgroundTint="@color/app_color"
            android:gravity="center"
            android:id="@+id/country_from_spinner"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
            android:spinnerMode="dropdown"
            android:layoutDirection="rtl"
            android:layout_marginLeft="@dimen/_5sdp"/>
        <View
            android:id="@+id/view_blo4"
            android:layout_width="@dimen/_10sdp"
            android:layout_height="1dp"
            android:layout_toRightOf="@+id/country_from_spinner"
            android:layout_marginTop="@dimen/_30sdp"
            android:background="@color/white"
            android:layout_marginLeft="@dimen/_5sdp"/>

        <View
            android:id="@+id/view_blo5"
            android:layout_width="90dp"
            android:layout_height="82dp"
            android:layout_toRightOf="@+id/view_blo4"
            android:background="@drawable/jetplane" />
        <View
            android:id="@+id/view_blo6"
            android:layout_width="@dimen/_10sdp"
            android:layout_height="1dp"
            android:layout_toRightOf="@+id/view_blo5"
            android:layout_marginTop="@dimen/_30sdp"
            android:background="@color/white"/>
        <Spinner
            android:backgroundTint="@color/app_color"
            android:gravity="center"
            android:id="@+id/country_to_spinner"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
            android:spinnerMode="dropdown"
            android:layout_toRightOf="@+id/view_blo6"
            android:layout_marginLeft="@dimen/_5sdp"/>
        <TextView
            android:id="@+id/country_selected_from_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/country_from_spinner"
            android:text="BEIRUT"
            android:textColor="@color/white"
            android:layout_marginLeft="@dimen/_40sdp"
            android:textSize="@dimen/_15ssp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/country_from_spinner"
            android:text="DUBAI"
            android:textColor="@color/white"
            android:layout_marginLeft="@dimen/_130sdp"
            android:textSize="@dimen/_15ssp"
            android:layout_toRightOf="@+id/country_selected_from_spinner"/>

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/shape2"
        android:layout_below="@+id/relative_from_to"
        android:layout_marginBottom="@dimen/_150sdp"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_marginLeft="@dimen/_40sdp"
        android:layout_marginRight="@dimen/_40sdp"/>




    <Button
        android:id="@+id/procced_btn"
        android:layout_width="160dp"
        android:layout_height="50dp"
        android:background="@drawable/shape"
        android:text="PROCEED"
        android:layout_marginTop="560dp"
        android:layout_marginLeft="125dp"


        />

</RelativeLayout>