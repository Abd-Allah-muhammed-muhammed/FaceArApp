<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".activities.VoiceMessageActivity">



    <RelativeLayout
        android:id="@+id/toolbar_back_assistant_voice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
      >

        <RelativeLayout
            android:id="@+id/toolbar_back1_assistant_voice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/toolbar_back_image_back_assist_voice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="4dp"
                android:background="@drawable/ic_back_arrow"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="7dp"
                android:layout_toEndOf="@+id/toolbar_back_image_back_assist_voice"
                android:text="@string/back"
                android:textColor="#ffff"
                android:textSize="12sp" />



        </RelativeLayout>
    </RelativeLayout>

    <View
        android:id="@+id/line1_assistant"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_15sdp"
        android:layout_below="@+id/toolbar_back_assistant_voice"
        android:background="@drawable/line_ight2" />



<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@+id/line1_assistant">

    <ImageView
        android:id="@+id/pic_mic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="4dp"
        android:src="@drawable/ic_record"
        android:layout_centerInParent="true"/>
</RelativeLayout>



















</RelativeLayout>