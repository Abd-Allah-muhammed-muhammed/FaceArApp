<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#332F2F"

    tools:context=".activities.FindHotels">

    <RelativeLayout
        android:id="@id/toolbar_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="center">

        <ImageView
            android:id="@+id/toolbar_back"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="4dp"
            android:background="@drawable/ic_back_arrow"
            android:backgroundTint="#FFEB3B" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="8dp"
            android:layout_toEndOf="@+id/toolbar_back"
            android:text="BACK"
            android:textColor="#ffff"
            android:textSize="12sp" />

        <ImageView
            android:layout_width="22dp"
            android:layout_height="34dp"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:layout_marginLeft="100dp"
            android:background="@drawable/logo" />

        <ImageView
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_gravity="center"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/ic_button" />
    </RelativeLayout>


    <View
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/toolbar_back"
        android:background="@drawable/line1" />

    <TextView

        android:fontFamily="sans-serif-light"
        android:id="@+id/tv_country"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line1"
        android:layout_gravity="center"
        android:layout_marginStart="30dp"
        android:layout_marginTop="4dp"
        android:gravity="center"
        android:text="Country"
        android:textColor="@color/app_color" />


    <TextView
        android:fontFamily="sans-serif-light"
        android:layout_toEndOf="@+id/tv_country"
        android:id="@+id/tv_city"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line1"
        android:layout_gravity="center"
        android:layout_marginStart="100dp"
        android:layout_marginTop="4dp"
        android:gravity="center"
        android:text="City"
        android:textColor="@color/app_color" />

    <TextView

        android:layout_below="@+id/tv_country"
        android:layout_marginTop="8dp"
        android:layout_marginStart="12dp"
android:id="@+id/icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_earth"/>


    <RelativeLayout
        android:layout_toRightOf="@+id/icon"
        android:layout_marginTop="8dp"
        android:id="@+id/spinner_layout"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_country"
        android:background="@android:color/transparent"
        android:gravity="end">





        <Spinner
android:gravity="center"
            android:id="@+id/region_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />

        <View
            android:layout_marginTop="4dp"
            android:id="@+id/line2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/region_spinner"
            android:background="@drawable/line1" />

    </RelativeLayout>







    <TextView
        android:layout_marginStart="50dp"
android:layout_marginTop="8dp"
        android:layout_toRightOf="@+id/spinner_layout"
        android:layout_below="@+id/tv_city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/icon2"
        android:drawableStart="@drawable/ic_map" />

    <RelativeLayout
       android:layout_toRightOf="@+id/icon2"
        android:layout_below="@+id/tv_country"
        android:layout_marginTop="8dp"
        android:id="@+id/spinner_layout2"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:gravity="end">




        <Spinner

            android:id="@+id/area_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />

        <View
            android:layout_marginTop="4dp"
            android:id="@+id/line3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/area_spinner"
            android:background="@drawable/line1" />

    </RelativeLayout>










    <TextView
        android:id="@+id/tv_check_in"
        android:layout_marginStart="8dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/spinner_layout"
    android:layout_width="100dp"
    android:layout_height="wrap_content"
    android:gravity="center"
        android:textSize="10sp"
        android:fontFamily="sans-serif-light"
    android:text="CHECK IN "

    android:textColor="@color/app_color" />


    <LinearLayout
        android:id="@+id/layout_check"
        android:orientation="horizontal"
        android:layout_marginStart="20dp"
        android:layout_below="@+id/tv_check_in"
        android:layout_width="130dp"
        android:layout_height="50dp">



        <LinearLayout
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:lines="1"
                android:layout_marginTop="4dp"
                android:fontFamily="sans-serif-thin"
                android:id="@+id/startDate_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#fff"
                android:textColorHint="#fff"
                android:textSize="30sp" />
        </LinearLayout>




        <LinearLayout
            android:layout_weight=".5"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">



            <TextView
                android:layout_gravity="center"
                android:layout_weight="1"
                android:fontFamily="sans-serif-medium"
                android:id="@+id/startDate_month"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:gravity="center"
                android:textColor="#fff"
                android:textColorHint="#fff"
                android:textSize="15sp" />
            <TextView
                android:layout_marginTop="5.8dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:fontFamily="sans-serif-thin"
                android:id="@+id/startDate_year"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:textColor="#fff"
                android:textColorHint="#fff"
                android:textSize="12sp" />

        </LinearLayout>

    </LinearLayout>

<LinearLayout
    android:id="@+id/nights_difference"
    android:layout_below="@+id/tv_check_in"
    android:layout_toEndOf="@+id/layout_check"
    android:layout_marginStart="30dp"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center">



    <TextView
        android:textSize="18sp"
    android:fontFamily="sans-serif-thin"
    android:id="@+id/nights"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:text="1 "
        android:paddingEnd="5dp"
    android:drawableEnd="@drawable/ic_moon"
    android:textColor="@color/white" />



    <TextView
        android:textColor="@color/white"
        android:text="Nights"
        android:fontFamily="sans-serif-thin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>


    <TextView
        android:layout_toEndOf="@+id/nights_difference"
        android:id="@+id/tv_check_out"
        android:layout_marginStart="50dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/spinner_layout"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="10sp"
        android:fontFamily="sans-serif-light"
        android:text="CHECK OUT "

        android:textColor="@color/app_color" />


    <LinearLayout
        android:id="@+id/layout_check_out"
        android:orientation="horizontal"
        android:layout_marginStart="40dp"
        android:layout_below="@+id/tv_check_out"
        android:layout_toEndOf="@id/nights_difference"
        android:layout_width="130dp"
        android:layout_height="50dp">



        <LinearLayout
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:layout_marginTop="4dp"
                android:fontFamily="sans-serif-thin"
                android:id="@+id/endDate_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#fff"
                android:textColorHint="#fff"
                android:textSize="30sp" />
        </LinearLayout>




        <LinearLayout
            android:layout_weight=".5"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">



            <TextView
                android:layout_gravity="center"
                android:layout_weight="1"
                android:fontFamily="sans-serif-medium"
                android:id="@+id/endDate_month"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:gravity="center"
                android:textColor="#fff"
                android:textColorHint="#fff"
                android:textSize="15sp" />
            <TextView
                android:layout_gravity="center"
                android:layout_weight="1"
                android:fontFamily="sans-serif-thin"
                android:id="@+id/endDate_year"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:textColor="#fff"
                android:textColorHint="#fff"
                android:textSize="12sp" />

        </LinearLayout>

    </LinearLayout>


    <RelativeLayout
        android:layout_toRightOf="@+id/icon3"
        android:layout_marginTop="20dp"
        android:id="@+id/spinner_room_layout"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_check"
        android:background="@android:color/transparent"
        android:gravity="end">





        <Spinner

            android:id="@+id/no_of_rooms"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />

        <View
            android:layout_marginTop="4dp"
            android:id="@+id/line4"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/no_of_rooms"
            android:background="@drawable/line1" />

    </RelativeLayout>


    <TextView
        android:layout_below="@+id/layout_check"
android:id="@+id/icon3"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="22dp"
        android:layout_marginStart="30dp"
        android:drawableStart="@drawable/ic_offer"/>


    <RelativeLayout
        android:layout_marginTop="20dp"
        android:id="@+id/spinner_adult_layout"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_check"
        android:layout_marginStart="2dp"
        android:background="@android:color/transparent"
        android:layout_toRightOf="@+id/icon4"
        android:gravity="end">




        <Spinner

            android:id="@+id/adilt_count"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />

        <View
            android:layout_marginTop="4dp"
            android:id="@+id/line5"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/adilt_count"
            android:background="@drawable/line1" />

    </RelativeLayout>


    <TextView
        android:layout_marginLeft="14dp"
        android:layout_toRightOf="@+id/spinner_room_layout"
        android:layout_below="@+id/layout_check"
android:layout_marginTop="22dp"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:id="@+id/icon4"
        android:drawableStart="@drawable/ic_man_adult_room"/>



    <RelativeLayout
        android:layout_marginTop="20dp"
        android:id="@+id/spinner_child_layout"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_check_out"
        android:background="@android:color/transparent"
        android:layout_toRightOf="@+id/icon5"
        android:gravity="end">



        <Spinner

            android:id="@+id/no_of_childs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />

        <View
            android:layout_marginTop="4dp"
            android:id="@+id/line6"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/no_of_childs"
            android:background="@drawable/line1" />

    </RelativeLayout>


    <TextView
        android:layout_marginLeft="14dp"
        android:id="@+id/icon5"
        android:layout_toRightOf="@+id/spinner_adult_layout"
        android:layout_marginTop="22dp"
        android:layout_below="@+id/layout_check_out"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:drawableStart="@drawable/ic_smallman"/>




<androidx.recyclerview.widget.RecyclerView
    android:padding="12dp"
    android:layout_marginTop="8dp"
android:id="@+id/rv_child"
    android:layout_below="@+id/spinner_child_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

</androidx.recyclerview.widget.RecyclerView>






    <Button
        android:layout_centerInParent="true"
    android:id="@+id/findHotels"
    android:layout_width="140dp"
        android:layout_below="@+id/rv_child"
    android:layout_height="40dp"
    android:layout_gravity="center"
    android:layout_marginTop="20dp"
    android:background="@color/app_color"
    android:text="FIND HOTELS" />







</RelativeLayout>










