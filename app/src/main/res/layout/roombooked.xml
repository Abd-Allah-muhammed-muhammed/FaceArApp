<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/plans_background1"
    tools:context=".activities.RoomBooked">

    <RelativeLayout
        android:id="@+id/relative_flight"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <RelativeLayout
            android:id="@+id/toolbar_back1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp">

            <ImageView
                android:id="@+id/toolbar_back2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_back_arrow" />

            <TextView
                android:id="@+id/back_pressed_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_25sdp"
                android:text="@string/back"
                android:textColor="@color/white" />

        </RelativeLayout>

        <ImageView
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_centerInParent="true" />

        <ImageView
            android:id="@+id/iv_booked_room"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="15dp" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/iv_line"
        android:layout_width="match_parent"
        android:layout_height="12dp"
        android:layout_below="@+id/relative_flight"
        android:layout_centerInParent="true"
        android:src="@drawable/line1" />


    <RelativeLayout
        android:id="@+id/relative_right_success"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_line"
        android:layout_centerInParent="true">

        <ImageView
            android:id="@+id/iv_right"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_100sdp"
            android:src="@drawable/right2"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="40dp"
            android:layout_toEndOf="@+id/iv_right"
            android:text="@string/success"
            android:textColor="#fff"
            android:textSize="@dimen/_25ssp"


            />

    </RelativeLayout>

    <ImageView

        android:id="@+id/iv_mantxt"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_130sdp"
        android:layout_below="@+id/relative_right_success"
        android:layout_centerInParent="true"
        android:layout_marginTop="@dimen/_15sdp"
        android:src="@drawable/manok"

        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_mantxt"
        android:layout_marginStart="@dimen/_160sdp"
        android:layout_marginTop="@dimen/_34sdp"
        android:layout_marginEnd="@dimen/_3sdp"
        android:layout_marginBottom="@dimen/_30sdp"
        android:gravity="center"
        android:text="@string/your_room_has_n_been_booked_n_n_check_your_email_n_for_further_details_n_good_luck"
        android:textColor="#FFF"
        android:textSize="@dimen/_13ssp" />


    <ImageView
        android:layout_width="@dimen/_20sdp"
        android:layout_height="@dimen/_60sdp"
        android:layout_alignBottom="@+id/iv_mantxt"
        android:layout_marginStart="@dimen/_140sdp"
        android:layout_marginTop="@dimen/_35sdp"
        android:layout_marginEnd="@dimen/_150sdp"
        android:layout_marginBottom="@dimen/_90sdp"
        android:src="@drawable/ic_quotation_mark" />


    <Button
        android:id="@+id/get_code"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_below="@+id/iv_mantxt"
        android:layout_centerInParent="true"
        android:layout_marginTop="@dimen/_20sdp"
        android:background="@color/shape"
        android:text="@string/get_reservition_code"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/iv_lines"
        android:layout_width="310dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/get_code"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/_15sdp"
        android:src="@drawable/line1" />

    <Button
