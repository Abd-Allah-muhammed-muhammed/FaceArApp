<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.PaymentActivity"
    android:orientation="vertical"
    android:background="@drawable/plans_background1">

    <RelativeLayout
        android:id="@+id/relative_payment"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <ImageView
            android:layout_marginStart="@dimen/_18sdp"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@drawable/ic_back_arrow"
            android:backgroundTint="#FFEB3B" />

    </RelativeLayout>
    <TextView
        android:layout_marginStart="@dimen/_18sdp"
        android:id="@+id/tv_please"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PLEASE SET YOUR PAYMENT"
        android:textColor="@color/app_color"
        android:textSize="15sp"
        android:layout_below="@+id/relative_payment"
        />
    <TextView
        android:layout_marginStart="@dimen/_18sdp"

        android:id="@+id/tv_kd"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="KD 1200"
        android:textColor="#fff"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_below="@+id/tv_please"
        />

    <RelativeLayout
        android:layout_margin="@dimen/_20ssp"
        android:background="#8A000000"
        android:id="@+id/layout7"
        android:layout_below="@+id/tv_kd"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_300sdp">

        <RelativeLayout
            android:gravity="center"
            android:layout_marginStart="@dimen/_18ssp"        android:id="@+id/relative_mr_mrs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >

            <EditText
                android:textSize="@dimen/_10ssp"
                android:id="@+id/ed_mr_mrs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Mr /Mrs"
                android:textColorHint="#fff"
                />

            <EditText
                android:textSize="@dimen/_10ssp"

                android:id="@+id/ed_firstName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="FIRST NAME"
                android:textColorHint="#fff"
                android:layout_toRightOf="@+id/ed_mr_mrs"
                android:layout_marginLeft="25dp"


                />
            <EditText
                android:textSize="@dimen/_10ssp"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="LAST NAME"
                android:textColorHint="#fff"
                android:layout_toRightOf="@+id/ed_firstName"
                android:layout_marginLeft="45dp"
                />

        </RelativeLayout>
        <RelativeLayout
            android:layout_margin="@dimen/_20sdp"
            android:background="#D81F1E1E"
            android:id="@+id/relative_vmk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/relative_mr_mrs"
            >


            <TextView
                android:textSize="@dimen/_10ssp"
                android:layout_marginTop="@dimen/_4sdp"
                android:drawableStart="@drawable/ic_arrow_drop_down_black_24dp"
                android:id="@+id/tv_payment_method"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PAYMENT METHOD"
                android:textColor="#fff"


                />
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_payment_method"
                android:layout_centerInParent="true"
                >



                <EditText
                    android:backgroundTint="@color/app_color"
                    android:textSize="@dimen/_10ssp"
                    android:id="@+id/ed_visaa"
                    android:layout_width="353dp"
                    android:layout_height="wrap_content"
                    android:hint="VISA"
                    android:drawableRight="@drawable/wd_ecom_visa"
                    android:textColorHint="#fff"


                    />
                <EditText
                    android:textSize="@dimen/_10ssp"

                    android:backgroundTint="@color/app_color"
                    android:id="@+id/ed_master_card"
                    android:layout_width="353dp"
                    android:layout_height="wrap_content"
                    android:hint="MASTERCARD"
                    android:drawableRight="@drawable/wd_ecom_mastercard"
                    android:textColorHint="#fff"
                    android:layout_below="@+id/ed_visaa"

                    />
                <EditText
                    android:backgroundTint="@color/app_color"
                    android:textSize="@dimen/_10ssp"

                    android:id="@+id/ed_knet"
                    android:layout_width="353dp"
                    android:layout_height="wrap_content"
                    android:hint="KNET"
                    android:drawableRight="@drawable/kent"
                    android:textColorHint="#fff"
                    android:layout_below="@+id/ed_master_card"

                    />
            </RelativeLayout>



        </RelativeLayout>

        <RadioGroup
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:id="@+id/radio_terms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="I agree to the Terms &amp; Condition"
                android:textColor="#fff"
                android:checked="true"
                android:buttonTint="@color/app_color"

                />

        </RadioGroup>
    </RelativeLayout>


    <Button
        android:layout_marginTop="@dimen/_18sdp"
        android:id="@+id/proceed_check_out"
        android:layout_width="270dp"
        android:layout_height="35dp"
        android:background="@drawable/border"
        android:foregroundGravity="center"
        android:text="PROCEED TO CHECKOUT"
        android:textColor="#FFF"
        android:layout_below="@+id/layout7"
        android:layout_centerInParent="true"

        />







</RelativeLayout>