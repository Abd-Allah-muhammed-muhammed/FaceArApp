<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".activities.RenewAccount"
    tools:showIn="@layout/app_bar_renew_account"
    android:background="@drawable/manlap">

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tap_layout"
        android:layout_width="@dimen/_300sdp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_20sdp"
        >



    </com.google.android.material.tabs.TabLayout>
    
    <RelativeLayout
        android:id="@+id/view_pager"
        android:layout_width="@dimen/_300sdp"
        android:layout_height="@dimen/_130sdp"
        android:layout_below="@+id/tap_layout"
        android:layout_centerHorizontal="true"
        android:background="@drawable/border2"
        >

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/view_pager_renew"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_40sdp"
            android:layout_marginRight="@dimen/_40sdp"
            android:background="@drawable/border2">



        </androidx.viewpager.widget.ViewPager>



        <ImageView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrow_circle_left"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/_5sdp"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrow_circle_right"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/_5sdp"
            />






    </RelativeLayout>







    <RelativeLayout
        android:id="@+id/linearLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
      android:layout_below="@+id/view_pager"
        android:layout_centerInParent="true"
        android:layout_marginTop="@dimen/_20sdp"


       >

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="139dp"
            android:layout_height="106dp"
            android:src="@drawable/jet"
            />

        <ImageView
            android:id="@+id/imageView10"
            android:layout_width="136dp"
            android:layout_height="106dp"
           android:layout_toRightOf="@+id/imageView9"
            app:srcCompat="@drawable/bed" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/imageView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        app:srcCompat="@drawable/manhelp"
        android:layout_below="@+id/linearLayout2"/>

</RelativeLayout>