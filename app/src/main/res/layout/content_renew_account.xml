<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".activities.RenewAccount"
    tools:showIn="@layout/app_bar_renew_account"
    android:background="@drawable/manlap">





    <RelativeLayout

        android:id="@+id/topBottomslayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        >

        <Button
            android:padding="@dimen/_4sdp"
            android:textSize="@dimen/_10ssp"
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_25sdp"
            android:layout_weight="1"
            android:text="BEST FLIGHTS"
            android:background="@drawable/shape"
            android:layout_margin="10dp"

            />

        <Button
            android:padding="@dimen/_4sdp"
            android:textSize="@dimen/_10ssp"
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_25sdp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/shape"
            android:text="BEST HOTELS"
            android:layout_toRightOf="@+id/button"
            tools:layout_editor_absoluteX="132dp"

            />

        <Button
            android:layout_margin="10dp"
            android:padding="@dimen/_4sdp"
            android:textSize="@dimen/_10ssp"
            android:id="@+id/button3"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_25sdp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:layout_toRightOf="@+id/button2"
            android:layout_weight="1"
            android:background="@drawable/shape"
            android:text="BEST DEALS"
            tools:layout_editor_absoluteX="264dp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/linearLayout3"
        android:layout_width="391dp"
        android:layout_height="164dp"
        android:layout_marginStart="11dp"
        android:layout_below="@+id/topBottomslayout">

        <Button
            android:id="@+id/button6"
            android:layout_width="50dp"
            android:layout_height="51dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/ic_arrow_back"
            android:layout_toLeftOf="@+id/imageButton"
            android:layout_centerVertical="true"
            />

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="249dp"
            android:layout_height="164dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/button7"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/button6"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_centerInParent="true"
            android:background="@drawable/fourseasonshotel"/>

        <Button
            android:id="@+id/button7"
            android:layout_width="50dp"
            android:layout_height="49dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/ic_arrow_forward_black_24dp"
            android:layout_toRightOf="@+id/imageButton"
            android:gravity="center_vertical"
            android:layout_centerVertical="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/linearLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
      android:layout_below="@+id/linearLayout3"
        android:layout_centerInParent="true"
        android:layout_marginTop="@dimen/_20sdp"


       >

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="139dp"
            android:layout_height="106dp"
            android:src="@drawable/jet"
            />

        <ImageView
            android:id="@+id/imageView10"
            android:layout_width="136dp"
            android:layout_height="106dp"
           android:layout_toRightOf="@+id/imageView9"
            app:srcCompat="@drawable/bed" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/imageView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        app:srcCompat="@drawable/manhelp"
        android:layout_below="@+id/linearLayout2"/>

</RelativeLayout>