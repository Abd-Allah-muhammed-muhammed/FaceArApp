            <!--android:layout_centerVertical="true"-->
            <!--android:layout_alignParentRight="true"-->
            <!--android:layout_marginRight="@dimen/_5sdp"-->
            <!--/>-->






    </RelativeLayout>







    <RelativeLayout
        android:id="@+id/linearLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
      android:layout_below="@+id/view_pager"
        android:layout_centerInParent="true"
        android:layout_marginTop="@dimen/_20sdp"


       >

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="139dp"
            android:layout_height="106dp"
            android:src="@drawable/jet"
            />

        <ImageView
            android:id="@+id/imageView10"
            android:layout_width="136dp"
            android:layout_height="106dp"
           android:layout_toRightOf="@+id/imageView9"
            app:srcCompat="@drawable/bed" />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/relative_img_renew_hotel_tamm"
        android:layout_width="@dimen/_300sdp"
        android:layout_height="@dimen/_80sdp"
        android:layout_marginTop="@dimen/_30sdp"
        android:background="@drawable/man1"
        android:layout_centerInParent="true"
        android:layout_above="@+id/tv_tab_me_renew_hotels"
        >

        <TextView
            android:id="@+id/assistant_label_voice_renew_hotel"
            android:layout_width="@dimen/_130sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginStart="8dp"
            android:drawablePadding="8dp"
            android:drawableStart="@drawable/ic_assistant_voice"
            android:fontFamily="sans-serif"
            android:gravity="center_vertical"
            android:text="SEND VOICE NOTE TO AGENT"
            android:textColor="@color/app_color"
            android:textSize="@dimen/_7ssp"
            android:textStyle="bold"
            android:visibility="gone"
            tools:visibility="visible"/>


        <TextView
            android:id="@+id/assistant_label_call_renew_hotel"
            android:layout_width="@dimen/_130sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="1dp"
            android:drawablePadding="8dp"
            android:drawableStart="@drawable/ic_assistant_call"
            android:fontFamily="sans-serif"
            android:gravity="center_vertical"
            android:text="CALL AGENT"
            android:textStyle="bold"
            android:textColor="@color/app_color"
            android:textSize="@dimen/_7ssp"
            android:visibility="gone"
            tools:visibility="visible"
            android:layout_below="@+id/assistant_label_voice_renew_hotel"
            />


        <TextView
            android:paddingStart="@dimen/_9ssp"
            android:id="@+id/assistant_label_message_renew_hotel"
            android:layout_width="@dimen/_130sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginStart="8dp"
            android:layout_weight="38"
            android:drawablePadding="8dp"
            android:drawableStart="@drawable/ic_assistant_message"
            android:fontFamily="sans-serif"
            android:text="SEND MESSAGE TO AGENT"
            android:textColor="@color/app_color"
            android:textSize="@dimen/_7ssp"
            android:gravity="center"
            android:visibility="gone"
            tools:visibility="visible"
            android:layout_alignParentRight="true"/>



    </RelativeLayout>


    <TextView
        android:id="@+id/tv_tab_me_renew_hotels"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tap me if you need MY ASSISTANCE "
        android:textColor="#fff"
        android:gravity="center"

        android:layout_alignParentBottom="true"
        />

</RelativeLayout>