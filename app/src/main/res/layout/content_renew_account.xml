<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".activities.RenewAccount"
    tools:showIn="@layout/app_bar_renew_account"
    android:background="@drawable/manlap">

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tap_layout"
        android:layout_width="@dimen/_300sdp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        app:tabBackground="@drawable/shep_selector"
        app:tabSelectedTextColor="@color/white"
        app:tabTextColor="@android:color/white"
        android:layout_marginTop="@dimen/_20sdp"
        app:tabTextAppearance="@style/MyCustomTabText"
        >



    </com.google.android.material.tabs.TabLayout>
    
    <RelativeLayout
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_marginStart="@dimen/_10sdp"
        android:id="@+id/view_pager"
        android:layout_width="@dimen/_300sdp"
        android:layout_height="@dimen/_130sdp"
        android:layout_below="@+id/tap_layout"
        android:layout_centerHorizontal="true"
        android:background="@drawable/border2"
        >

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/view_pager_renew"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


        </androidx.viewpager.widget.ViewPager>



