<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    >

    <View
        android:id="@+id/line2"
        android:layout_width="1dp"
        android:layout_height="@dimen/_120sdp"
        android:layout_below="@+id/spinner_date"
        android:background="@drawable/line1"
        android:layout_marginLeft="@dimen/_15sdp"

        />
    <RelativeLayout
        android:id="@+id/relative_country1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_105sdp"
        android:layout_below="@+id/spinner_date"
        android:layout_toRightOf="@+id/line2"
        android:layout_marginLeft="@dimen/_4sdp"
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_marginRight="@dimen/_8sdp"
        >

        <ImageView
            android:id="@+id/iv_icon"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/icon"
            />
        <TextView
            android:id="@+id/tv_airline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TURKISH Airlines"
            android:textColor="@color/app_color"
            android:layout_toRightOf="@+id/iv_icon"

            />
        <TextView
            android:id="@+id/tv_time_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="7:00 PM "
            android:layout_toRightOf="@+id/iv_icon"
            android:layout_below="@+id/tv_airline"
            android:textColor="#fff"

            />
        <TextView
            android:id="@+id/tv_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:layout_toRightOf="@+id/tv_time_one"
            android:layout_below="@+id/tv_airline"
            android:textColor="#fff"

            />
        <TextView
            android:id="@+id/tv_time_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10:45 PM "
            android:layout_toRightOf="@+id/tv_text"
            android:layout_below="@+id/tv_airline"
            android:textColor="#fff"

            />


        <TextView
            android:id="@+id/tv_beirut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Beirut "
            android:layout_toRightOf="@+id/iv_icon"
            android:layout_below="@+id/tv_time_two"
            android:textColor="@color/app_color"

            />
        <TextView
            android:id="@+id/tv_text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:layout_toRightOf="@+id/tv_beirut"
            android:layout_below="@+id/tv_time_two"
            android:textColor="@color/app_color"

            />
        <TextView
            android:id="@+id/tv_kuwait"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kuwait "
            android:layout_toRightOf="@+id/tv_text2"
            android:layout_below="@+id/tv_time_two"
            android:textColor="@color/app_color"

            />
        <TextView
            android:id="@+id/tv_kuwait2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kuwait "
            android:layout_toRightOf="@+id/iv_icon"
            android:layout_below="@+id/tv_beirut"
            android:textColor="@color/app_color"

            />
        <TextView
            android:id="@+id/tv_text3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:layout_toRightOf="@+id/tv_kuwait2"
            android:layout_below="@+id/iv_icon"
            android:textColor="@color/app_color"

            />
        <TextView
            android:id="@+id/tv_bubai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dubai "
            android:layout_toRightOf="@+id/tv_text3"
            android:layout_below="@+id/tv_beirut"
            android:textColor="@color/app_color"

            />
        <RelativeLayout
            android:id="@+id/relative_bag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_kuwait2"
            android:layout_toRightOf="@+id/iv_icon"

            >
            <ImageView
                android:id="@+id/iv_bag"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/bag"
                />
            <TextView
                android:id="@+id/tv_kg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="40 Kg"
                android:textColor="#fff"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/iv_bag"
                />

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/relative_bag"
            android:layout_toRightOf="@+id/iv_icon"
            android:layout_marginTop="@dimen/_5sdp"

            >
            <ImageView
                android:id="@+id/iv_bag2"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/bag2"

                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20 Kg"
                android:textColor="#fff"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/iv_bag2"
                />



        </RelativeLayout>

        <ImageView
            android:id="@+id/iv_star"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:src="@drawable/star"
            android:layout_alignParentRight="true"
            />
        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3 hrs 40 min"
            android:textColor="#fff"
            android:layout_toLeftOf="@+id/iv_star"
            />
        <TextView
            android:id="@+id/tv_transit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Transit"
            android:textColor="#fff"
            android:layout_toLeftOf="@+id/iv_star"
            android:layout_below="@+id/tv_time"
            android:drawableLeft="@drawable/transit"
            />

        <Spinner
            android:id="@+id/spinner_dollar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/tv_transit"
            android:backgroundTint="@color/app_color"
            >


        </Spinner>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="246"
            android:layout_toLeftOf="@+id/spinner_dollar"
            android:layout_below="@+id/tv_transit"
            android:textColor="@color/app_color"

            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_20sdp"
            android:text="Select Flight"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:background="@drawable/shape"
            android:layout_marginEnd="@dimen/_15sdp"


            />

    </RelativeLayout>
    <View
        android:id="@+id/line3"
        android:layout_width="@dimen/_270sdp"
        android:layout_height="2dp"
        android:background="@drawable/line1"
        android:layout_below="@+id/relative_country1"
        android:layout_toRightOf="@+id/line2"
        android:layout_marginTop="@dimen/_5sdp"
        />

    </RelativeLayout>