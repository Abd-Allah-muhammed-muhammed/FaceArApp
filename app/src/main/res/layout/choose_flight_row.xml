            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_time_two_return"
            android:layout_toRightOf="@+id/tv_beirut_return"
            android:text=" - "
            android:textColor="@color/app_color"

            />

        <TextView
            android:id="@+id/tv_kuwait_return"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_time_two_return"
            android:layout_toRightOf="@+id/tv_text2_return"
            android:text=" yhvyhy"
            android:textColor="@color/app_color"

            />

        <TextView
            android:id="@+id/tv_kuwait2_return"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_beirut_return"
            android:layout_toRightOf="@+id/iv_icon_return"
            android:text="Kuwait "
            android:textColor="@color/app_color"

            />

        <TextView
            android:id="@+id/tv_text3_return"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_icon_return"
            android:layout_toRightOf="@+id/tv_kuwait2_return"
            android:text=" - "
            android:textColor="@color/app_color"

            />

        <TextView
            android:id="@+id/tv_bubai_return"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_beirut_return"
            android:layout_toRightOf="@+id/tv_text3_return"
            android:text="ybhythybhy"
            android:textColor="@color/app_color"

            />

        <TextView
            android:id="@+id/tv_bubai2_return"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_bubai_return"
            android:layout_toRightOf="@+id/tv_kuwait3_return"
            android:text="ybhythybhy"
            android:textColor="@color/app_color"

            />


        <TextView
            android:id="@+id/tv_kuwait3_return"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_kuwait2_return"
            android:layout_toRightOf="@+id/iv_icon_return"
            android:text="Kuwait - "
            android:textColor="@color/app_color"

            />


        <TextView
            android:id="@+id/tv_kuwait4_return"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_kuwait3_return"
            android:layout_toRightOf="@+id/iv_icon_return"
            android:text="Kuwait"
            android:textColor="@color/app_color"

            />


        <TextView
            android:id="@+id/tv_bubai3_return"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_bubai2_return"
            android:layout_toRightOf="@+id/tv_kuwait3_return"
            android:text="ybhythybhy"
            android:textColor="@color/app_color"

            />


        <RelativeLayout
            android:id="@+id/relative_bag_return"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_kuwait4_return"
            android:layout_toRightOf="@+id/iv_icon_return"

            >

            <ImageView
                android:id="@+id/iv_bag_return"
                android:layout_width="@dimen/_15sdp"
                android:layout_height="30dp"
                android:src="@drawable/bag" />

            <TextView
                android:id="@+id/tv_kg_return"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/iv_bag_return"
                android:text="40 Kg"
