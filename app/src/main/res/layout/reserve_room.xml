<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".model.ReserveRoom"
    android:orientation="vertical"
    android:background="@drawable/manhand"

    >

    <RelativeLayout
        android:id="@+id/relative_flight_tamm"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@drawable/ic_back_arrow"
            android:backgroundTint="#FFEB3B" />
        <ImageView
            android:layout_width="34dp"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:background="@drawable/logo" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="15dp"
            android:background="@drawable/ic_button" />

    </RelativeLayout>

    <ImageView

        android:id="@+id/img_bigline"
        android:layout_width="wrap_content"
        android:layout_height="12dp"
        android:src="@drawable/line1"
        android:layout_below="@+id/relative_flight_tamm"
        />



    <ImageView
        android:id="@+id/img_hotel"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:src="@drawable/hotel1"
        android:layout_centerInParent="true"
        android:layout_below="@+id/img_bigline"


        />
    <TextView
        android:id="@+id/txt_tamm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TAMM"
        android:textSize="30dp"
        android:textColor="#fff"
        android:layout_below="@+id/img_hotel"
        android:layout_centerInParent="true"



        />
    <TextView
        android:id="@+id/txt_hotels"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HOTELS"
        android:textSize="20dp"
        android:textColor="@color/app_color"
        android:layout_below="@+id/txt_tamm"
        android:layout_centerInParent="true"
        />

    <ImageView
        android:id="@+id/img_smallline"
        android:layout_width="250dp"
        android:layout_height="12dp"
        android:src="@drawable/line1"
        android:layout_below="@+id/txt_hotels"
        android:layout_centerInParent="true"
        />

    <TextView
        android:id="@+id/txt_best"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BEST HOTELS DEALS"
        android:textColor="@color/app_color"
        android:textSize="20dp"
        android:layout_centerInParent="true"
        android:layout_below="@id/img_smallline"
        />
    <TextView
        android:id="@+id/txt_special"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="WITH SPECIAL ASSISTANCE"
        android:textColor="#fff"
        android:textSize="20dp"
        android:layout_below="@+id/txt_best"
        android:layout_centerInParent="true"

        />
    <RelativeLayout
        android:id="@+id/relative_where_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_special"
        android:layout_centerInParent="true"
        >
        <TextView
            android:id="@+id/txt_anywhere"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="anywhere"
            android:textSize="20dp"
            android:textColor="#fff"

            />
        <TextView
            android:id="@+id/txt_anytime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=", anytime"
            android:textSize="20dp"
            android:textColor="#fff"
            android:layout_toRightOf="@+id/txt_anywhere"
            />
    </RelativeLayout>


    <Button
        android:id="@+id/btn_reserve_user"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="RESERVE ROOM"
        android:textColor="#FFF"
        android:background="@drawable/border"
        android:layout_below="@+id/relative_where_time"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"

        />

    <ImageView
        android:id="@+id/img_man"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_reserve_user"
        android:layout_marginTop="90dp"
        android:src="@drawable/man1"
        app:srcCompat="@drawable/manhelp" />





</RelativeLayout>