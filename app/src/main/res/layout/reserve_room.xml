<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".model.ReserveRoom"
    android:orientation="vertical"
    android:background="@drawable/plans_background"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        >
        <Button
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/ic_back_arrow"
            android:layout_marginTop="15dp"
            />
        <ImageView

            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/logo"
            android:layout_marginLeft="145dp"

            />
        <ImageView

            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/ic_button"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="15dp"
            />
    </LinearLayout>

    <ImageView

        android:id="@+id/img_bigline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/line"
        />



    <ImageView
        android:id="@+id/img_hotel"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:src="@drawable/hotel1"
        android:background="@color/app_color1"

        />
    <TextView
        android:id="@+id/txt_tamm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TAMM"
        android:textSize="50dp"
        android:textColor="#fff"
        android:layout_gravity="center"


        />
    <TextView
        android:id="@+id/txt_hotels"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HOTELS"
        android:textSize="25dp"
        android:textColor="@color/app_color"
        android:layout_gravity="center"
        />

    <ImageView
        android:id="@+id/img_smallline"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:src="@drawable/line"
        android:layout_gravity="center"
        />

    <TextView
        android:id="@+id/txt_best"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BEST HOTELS DEALS"
        android:textColor="@color/app_color"
        android:textSize="25dp"
        android:layout_gravity="center"
        />
    <TextView
        android:id="@+id/txt_special"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="WITH SPECIAL ASSISTANCE"
        android:textColor="#fff"
        android:layout_gravity="center"
        android:textSize="25dp"

        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        >
        <TextView
            android:id="@+id/txt_anywhere"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="anywhere"
            android:textSize="20dp"
            android:textColor="#fff"
            />
        <TextView
            android:id="@+id/txt_anytime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=", anytime"
            android:textSize="20dp"
            android:textColor="#fff"
            />






    </LinearLayout>




    <Button
        android:id="@+id/btn_reserve_user"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="RESERVE ROOM"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5dp"
        android:textColor="#FFF"
        android:background="@drawable/border"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        android:onClick="reverse_room"

        />
    <ImageView
        android:id="@+id/img_man"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/man1"


        />





</LinearLayout>