<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.PaymentActivity"
    android:background="@drawable/main">

    <RelativeLayout
        android:id="@+id/relative_payment"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_back_arrow"
            android:backgroundTint="#FFEB3B"
            android:layout_marginTop="15dp"/>


    </RelativeLayout>

    <TextView
        android:id="@+id/tv_please"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PLEASE SET YOUR PAYMENT"
        android:textColor="@color/app_color"
        android:textSize="15sp"
        android:layout_below="@+id/relative_payment"
        />
    <TextView
        android:id="@+id/tv_kd"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="KD 105.00"
        android:textColor="#fff"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_below="@+id/tv_please"
        />





    <RelativeLayout
        android:id="@+id/relative_mr_mrs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_kd"
        android:layout_centerInParent="true"
        >

        <EditText
            android:id="@+id/ed_mr_mrs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Mr /Mrs"
            android:textColorHint="#fff"
            />

        <EditText
            android:id="@+id/ed_firstName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="FIRST NAME"
            android:textColorHint="#fff"
            android:layout_toRightOf="@+id/ed_mr_mrs"
            android:layout_marginLeft="25dp"


            />
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="LAST NAME"
            android:textColorHint="#fff"
            android:layout_toRightOf="@+id/ed_firstName"
            android:layout_marginLeft="45dp"
            />

    </RelativeLayout>
        <RelativeLayout
            android:id="@+id/relative_vmk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/relative_mr_mrs"
            >


            <TextView
                android:id="@+id/tv_payment_method"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PAYMENT METHOD"
                android:textColor="#fff"
                android:layout_marginLeft="40dp"


                />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_payment_method"
                android:layout_centerInParent="true"
                >



                <EditText
                    android:id="@+id/ed_visaa"
                    android:layout_width="353dp"
                    android:layout_height="wrap_content"
                    android:hint="VISA"
                    android:drawableRight="@drawable/visa"
                    android:textColorHint="#fff"


                    />
                <EditText
                    android:id="@+id/ed_master_card"
                    android:layout_width="353dp"
                    android:layout_height="wrap_content"
                    android:hint="MASTERCARD"
                    android:drawableRight="@drawable/mastercard"
                    android:textColorHint="#fff"
                    android:layout_below="@+id/ed_visaa"

                    />
                <EditText
                    android:id="@+id/ed_knet"
                    android:layout_width="353dp"
                    android:layout_height="wrap_content"
                    android:hint="KNET"
                    android:drawableRight="@drawable/knet"
                    android:textColorHint="#fff"
                    android:layout_below="@+id/ed_master_card"

                    />
            </RelativeLayout>

        </RelativeLayout>

    <RadioGroup
        android:id="@+id/radio_terms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/relative_vmk"
        >
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="I agree to the Terms &amp; Condition"
            android:textColor="#fff"
            android:checked="true"
            android:buttonTint="@color/app_color"

            />

    </RadioGroup>
    <Button
        android:id="@+id/proceed_check_out"
        android:layout_width="270dp"
        android:layout_height="35dp"
        android:background="@drawable/border"
        android:foregroundGravity="center"
        android:text="PROCEED TO CHECKOUT"
        android:textColor="#FFF"
        android:layout_below="@+id/radio_terms"
        android:layout_centerInParent="true"

        />







</RelativeLayout>