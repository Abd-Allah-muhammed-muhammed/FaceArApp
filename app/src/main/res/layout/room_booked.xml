<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.RoomBooked"
    android:orientation="vertical"
    android:background="@drawable/manhand">
    <RelativeLayout
        android:id="@+id/relative_flight"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        >
        <RelativeLayout
            android:id="@+id/toolbar_back1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp">

            <ImageView
                android:id="@+id/toolbar_back2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_back_arrow"
                />
            <TextView
                android:id="@+id/back_pressed_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BACK"
                android:textColor="@color/white"
                android:layout_marginStart="@dimen/_25sdp"/>

        </RelativeLayout>

        <ImageView
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_centerInParent="true"
            android:background="@drawable/logo" />

        <ImageView
            android:id="@+id/iv_booked_room"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="15dp"
            android:background="@drawable/ic_button" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/iv_line"
        android:layout_width="match_parent"
        android:layout_height="12dp"
        android:src="@drawable/line1"
        android:layout_below="@+id/relative_flight"
        android:layout_centerInParent="true"
        />



    <RelativeLayout
        android:id="@+id/relative_right_success"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_line"
        android:layout_centerInParent="true"
        >

        <ImageView
            android:id="@+id/iv_right"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_100sdp"
            android:src="@drawable/right"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/success"
            android:textSize="@dimen/_25ssp"
            android:textColor="#fff"
            android:layout_marginTop="40dp"
            android:layout_toRightOf="@+id/iv_right"


            />

    </RelativeLayout>

    <ImageView
        android:id="@+id/iv_mantxt"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_90sdp"
        android:src="@drawable/manright"
        android:layout_below="@+id/relative_right_success"
        />




    <Button
        android:id="@+id/get_code"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:text="@string/get_reservition_code"
        android:background="@drawable/shape"
        android:layout_below="@+id/iv_mantxt"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_centerInParent="true"
        />

    <ImageView
        android:id="@+id/iv_lines"
        android:layout_width="310dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:src="@drawable/line1"
        android:layout_below="@+id/get_code"
        android:layout_marginTop="@dimen/_15sdp"
        />

    <Button
        android:id="@+id/btn_book_hotel"
        android:layout_width="130dp"
        android:layout_height="30dp"
        android:text="@string/reserve_flight"
        android:layout_below="@+id/iv_lines"
        android:background="@drawable/border2"
        android:textColor="@color/app_color"
        android:layout_centerInParent="true"
        android:layout_marginTop="@dimen/_20sdp"


        />



    <RelativeLayout
        android:layout_centerHorizontal="true"
        android:id="@+id/relative_img_hotel_booked_tamm"
        android:layout_width="@dimen/_300sdp"
        android:layout_height="@dimen/_90sdp"
        android:layout_marginTop="@dimen/_30sdp"
        android:background="@drawable/man1"
android:layout_above="@+id/tv_tab_me_booked_hotels"        >

        <TextView
            android:id="@+id/assistant_label_voice_booked_hotel"
            android:layout_width="@dimen/_130sdp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:drawablePadding="8dp"
            android:drawableStart="@drawable/ic_assistant_voice"
            android:fontFamily="sans-serif"
            android:gravity="center_vertical"
            android:text="SEND VOICE NOTE TO AGENT"
            android:textColor="@color/app_color"
            android:textSize="13sp"
            android:textStyle="bold"
            android:visibility="gone"
            tools:visibility="visible"/>


        <TextView
            android:id="@+id/assistant_label_call_booked_hotel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:drawablePadding="8dp"
            android:drawableStart="@drawable/ic_assistant_call"
            android:fontFamily="sans-serif"
            android:gravity="center_vertical"
            android:text="CALL AGENT"
            android:textStyle="bold"
            android:textColor="@color/app_color"
            android:textSize="13sp"
            android:visibility="gone"
            tools:visibility="visible"
            android:layout_below="@+id/assistant_label_voice_booked_hotel"
            />


        <TextView
            android:id="@+id/assistant_label_message_booked_hotel"
            android:layout_width="@dimen/_130sdp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_weight="38"
            android:drawablePadding="8dp"
            android:drawableStart="@drawable/ic_assistant_message"
            android:fontFamily="sans-serif"
            android:text="SEND MESSAGE TO AGENT"
            android:textColor="@color/app_color"
            android:textSize="13sp"
            android:visibility="gone"
            tools:visibility="visible"
            android:layout_alignParentRight="true"/>



    </RelativeLayout>



    <TextView
        android:id="@+id/tv_tab_me_booked_hotels"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tap me if you need MY ASSISTANCE "
        android:textColor="#fff"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/_5sdp"
        />







    </RelativeLayout>




